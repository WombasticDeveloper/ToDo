CREATE DATABASE ToDo;

CREATE TABLE Users{
    User_ID INT AUTO_INCREMENT,
    Login VARCHAR(35) UNIQUE NOT NULL,
    E-mail VARCHAR(40)/adress? UNIQUE NOT NULL,
    Password VARCHAR(60) NOT NULL,
    Theme BOOL DEFAULT=0
};

CREATE TABLE Tasks{
    Task_ID INT AUTO_INCREMENT,
    User_ID INT,
    Done BOOL DEFAULT=0, (not done)
    Title VARCHAR(40)
}
